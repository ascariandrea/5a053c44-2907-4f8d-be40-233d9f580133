{
  "name": "@weroad-test/backend",
  "version": "1.0.0",
  "description": "",
  "author": "Andrea Ascari",
  "private": true,
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --config ./jest-spec.config.ts",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --runInBand",
    "test:cov": "yarn test:e2e --coverage",
    "nest": "nest",
    "mikro-orm": "mikro-orm",
    "add-user": "node -r tsconfig-paths/register -r ts-node/register ./bin/create-user.ts",
    "db-seed": "node -r tsconfig-paths/register -r ts-node/register ./bin/db-seed.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.6.0",
    "@mikro-orm/cli": "^5.6.16",
    "@mikro-orm/core": "^5.6.16",
    "@mikro-orm/migrations": "^5.6.16",
    "@mikro-orm/nestjs": "^5.1.8",
    "@mikro-orm/postgresql": "^5.6.16",
    "@mikro-orm/reflection": "^5.6.16",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "@nestjs/apollo": "^11.0.4",
    "@nestjs/common": "^9.4.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.4.0",
    "@nestjs/graphql": "^11.0.4",
    "@nestjs/jwt": "^10.0.3",
    "@nestjs/passport": "^9.0.3",
    "@nestjs/platform-express": "^9.4.0",
    "@weroad-test/models": "workspace:*",
    "bcrypt": "^5.1.0",
    "date-fns": "^2.29.3",
    "fp-ts": "^2.13.1",
    "graphql": "^16.6.0",
    "io-ts": "^2.2.20",
    "io-ts-types": "^0.5.19",
    "jsonwebtoken": "^9.0.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "uuid": "^9.0.0"
