{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "strict": false,
    "module": "commonjs",
    "declaration": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo"
  },
  "include": [
    "./typings",
    "./src",
    "./test",
    "./jest.*.ts",
    "mikro-orm.config.ts"
  ]
}
